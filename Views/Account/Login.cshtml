@model GDR.Models.ModelsForViews.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row" style="display: flex; width: 100%; flex-direction: row; justify-content: center; align-items: center">
        <div class="col-md-4 col-lg-4 col-sm-12 col-xs-4">
            <div class="jumbotron">
                <h1 class="display-4">Login</h1>
                @using (Html.BeginForm("Login", "Account", method: FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.returnUrl)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Login)
                        @Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.Login)</span>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password)
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.Password)</span>
                    </div>

                    <div class="form-check">
                        @Html.CheckBoxFor(model => model.RememberMe, new { @class = "form-check-input" })
                        <label class="form-check-label">
                            @Html.DisplayNameFor(model => model.RememberMe)
                        </label>
                    </div>
                    <button type="submit" class="btn btn-dark form-control">Entrar</button>
                }
            </div>
        </div>
    </div>
</div>

