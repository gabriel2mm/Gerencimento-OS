@model string
@{
    ViewData["Title"] = "Reprovar requisição";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="jumbotron">
        @using (Html.BeginForm(method: FormMethod.Post, new { @class = "form" }))
        {
            <h5>Justificativa</h5>
            <div class="form-group">
                <input type="hidden" value="@Model" name="id" id="id" />
            </div>
            <div class="form-group">
                <textarea name="description" class="form-control" rows="5" cols="5"></textarea>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        @Html.ActionLink("voltar", "ViewOrder", "Order", new { id = Model }, new { @class = "btn btn-secondary form-control" })
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-success form-control">Enviar</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
